#!/usr/bin/env python3
"""Command-line wrapper for the scrape_pipeline package."""
from pathlib import Path
import sys

# Allow running directly from a cloned repo without installation.
ROOT = Path(__file__).resolve().parent.parent
SRC = ROOT / "src"
if SRC.exists():
    sys.path.insert(0, str(SRC))

from scrape_pipeline.pipeline import main


if __name__ == "__main__":
    main()
